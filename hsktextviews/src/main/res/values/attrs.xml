<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="hanzi" format="string"/>

    <declare-styleable name="HSKPinyinSelector">
        <attr name="hanzi" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="textColor" format="color" />
        <attr name="autoAddFlatTones" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HSKWordView">
        <attr name="pinyin" format="string" />
        <attr name="pinyinEditable" format="boolean" />
        <attr name="pinyinSize" format="dimension" />
        <attr name="pinyinStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="pinyinColor" format="color" />
        <attr name="endSeparator" format="string" />

        <!-- Attributes for Hanzi TextView -->
        <attr name="hanzi" />
        <attr name="hanziSize" format="dimension" />
        <attr name="hanziStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="hanziColor" format="color" />

        <attr name="isClicked" format="boolean" />
        <attr name="clickedBackgroundColor" format="color" />
        <attr name="clickedPinyinColor" format="color" />
        <attr name="clickedHanziColor" format="color" />
    </declare-styleable>

    <declare-styleable name="HSKTextView">
        <attr name="text" format="string"/>
        <attr name="wordSeparator" format="string" />
        <attr name="hanziTextSize" format="dimension" />

        <attr name="clickedWordBackgroundColor" format="color" />
        <attr name="clickedWordPinyinColor" format="color" />
        <attr name="clickedWordHanziColor" format="color" />
    </declare-styleable>
</resources>