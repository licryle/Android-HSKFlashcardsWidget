<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@android:style/Theme.DeviceDefault.DayNight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:textColor="?android:attr/textColorPrimary"
    android:theme="@style/Theme.HSKFlashcardsWidget">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_gravity="right"
                android:src="@drawable/baseline_autorenew_24"
                android:id="@+id/flashcard_reload"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:layout_margin="5dp"
                app:tint="?android:attr/textColorSecondary"
                android:background="?android:attr/colorAccent"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="你好g"
                android:textSize="30sp"
                android:id="@+id/flashcard_chinese"/>
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_gravity="right"
                android:src="@drawable/baseline_volume_up_24"
                android:id="@+id/flashcard_speak"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:layout_margin="5dp"
                app:tint="?android:attr/textColorSecondary"
                android:background="?android:attr/colorAccent"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="ni hao"
            android:textSize="20sp"
            android:id="@+id/flashcard_pinyin"
            android:layout_marginTop="0dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Hello"
            android:textSize="15sp"
            android:id="@+id/flashcard_english"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="HSK 2"
            android:textSize="15sp"
            android:id="@+id/flashcard_hsklevel"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</FrameLayout>