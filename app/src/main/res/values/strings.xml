    <string name="anki_card_css">H1 {
font-size: 60px;
}

.card {
font-family: arial;
font-size: 20px;
text-align: center;
color: black;
background-color: white;
}

.example {
font-size: 20px;
}

HR {
margin-top: 35px;
margin-bottom: 35px;
}

.metadata > div {
flex-grow: 1;
}

.metadata > div:nth-child(2) {
font-size: 30px;
}

.metadata > div:nth-child(1) {
text-align: center;
font-size: 30px;
}

.metadata > div:nth-child(3) {
text-align: right;
}

.metadata {
position: fixed;
display: flex;
flex-direction: row;
bottom: 0;
width: 92%;
align-items: flex-end;
margin: 0;
padding: 0;
}

.mobile .disabled {display: none;visibility: hidden;}</string>
