<resources>

    <style name="Widget.HSKFlashcardsWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_background</item>
    </style>

    <style name="Widget.HSKFlashcardsWidget.AppWidget.InnerView" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_inner_view_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.HSKFlashCardsWidget.Icons" parent="android:Widget">
        <item name="android:tint">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/colorBackground</item>
        <item name="android:background">?android:attr/colorAccent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="RoundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% makes it fully circular -->
    </style>

    <style name="Word.SecondaryInfo.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="Word.SecondaryInfo.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="Word.PrimaryInfo.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>
</resources>