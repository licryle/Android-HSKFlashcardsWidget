<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="@drawable/search_item_border">

    <!-- Bookmark Icon -->
    <ImageView
        android:id="@+id/fav_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:src="@drawable/bookmark_24px"
        android:contentDescription="Favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="3dp">


        <!-- Chinese Character -->
        <fr.berliat.hsktextviews.views.HSKWordView
            android:id="@+id/HSKWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:pinyin="@string/widget_default_pinyin"
            app:pinyinSize="10sp"
            app:pinyinColor="@android:color/darker_gray"

            app:hanzi="@string/widget_default_chinese"
            app:hanziSize="15sp"
            app:hanziColor="@android:color/black"
            app:hanziStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/definition"/>


        <!-- English Definition -->
        <TextView
            android:id="@+id/definition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/widget_default_english"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/HSKWord"
            app:layout_constraintRight_toLeftOf="@id/hsk_level" />

        <!-- HSK Level -->
        <TextView
            android:id="@+id/hsk_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSK 3"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
